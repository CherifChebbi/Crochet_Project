{% extends 'front/front_base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<section class="min-vh-100 mb-8 " style="margin-top: 150px;">
    <div class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3 border-radius-lg" 
        style="background-image: url('back/assets/img/curved-images/curved14.jpg'); background-size: cover;">
        <span class="mask bg-gradient-dark opacity-6"></span>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5 text-center mx-auto">
                    <h1 class="text-white mb-2 mt-5">Ravie de vous revoir !</h1>
                    <p class="text-light">Connectez-vous pour accéder à votre univers ZaiZen.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row mt-lg-n10 mt-md-n11 mt-n10" style="margin-bottom: 100px;">
            <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
                <div class="card shadow-lg border-0">
                    <div class="card-body px-5 py-4">
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger text-center" role="alert">
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                </div>
                            {% endif %}

                            {% if app.user %}
                                <div class="alert alert-info text-center mb-3" role="alert">
                                    Connecté en tant que {{ app.user.userIdentifier }}, 
                                    <a href="{{ path('app_logout') }}" class="text-primary">Se déconnecter</a>
                                </div>
                            {% endif %}

                            <div class="form-floating mb-3">
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" 
                                    class="form-control" placeholder="Email Address" autocomplete="email" required autofocus>
                            </div>

                            <div class="form-floating mb-3">
                                <input type="password" name="password" id="inputPassword" 
                                    class="form-control" placeholder="Password" autocomplete="current-password" required>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-lg btn-primary" type="submit">Se connecter</button>
                            </div>

                            <p class="text-center mb-0">Pas encore de compte ?  
                                <a href="{{ path('app_register') }}" class="text-primary">Créez-en un ici</a>
                            </p>
                        </form>					
                    </div>
                </div>
            </div>
        </div>  
    </div>
</section>	
{% endblock %}
