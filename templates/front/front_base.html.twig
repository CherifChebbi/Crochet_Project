					</div>

					<!-- Menu desktop -->
					<div class="menu-desktop">
						<ul class="main-menu">
							<li >
								<a href="{{path('app_product_index')}}">Accueil</a>	
							</li>

							<li>
								<a href="{{path('app_product_shop')}}">Boutique</a>
							</li>

							<li>
								<a href="{{path('app_product_index')}}#about">À propos</a>
							</li>

							<li>
								<a href="{{path('app_product_contact')}}">Contact</a>
							</li>
						</ul>
					</div>	

					<!-- Icon header -->
					<div class="wrap-icon-header flex-w flex-r-m">
						<!-- Panier Icon -->
						<a href="{{ path('cart_view') }}" class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11">
							<i class="fas fa-shopping-cart" style="font-size: 24px; cursor: pointer;"></i>
						</a>
						<!-- Login Icon -->
						<a href="{{ path('app_login') }}"  class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11">
							<i class="fas fa-user" style="font-size: 24px; cursor: pointer;"></i>
						</a>
					</div>
				</nav>
			</div>	
		</div>

		<!-- Header Mobile -->
		<div class="wrap-header-mobile">
			<!-- Logo moblie -->		
			<div class="wrap-icon-header flex-w flex-r-m m-r-15">
				<!-- Panier Icon -->
				<a href="/cart" class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11">
					<i class="fas fa-shopping-cart" style="font-size: 24px; cursor: pointer;"></i>
				</a>	
				<!-- Login Icon -->
				<a href="{{ path('app_login') }}"  class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11">
