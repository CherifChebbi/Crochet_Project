{% block body %}
			<div class="container-fluid py-4">
				<div class="row">
					<!-- Carte 1 : Commandes aujourd'hui -->
					<div class="col-lg-3 col-md-6 col-12 mb-4">
						<div class="card bg-gradient-primary shadow-lg border-0 h-100">
							<div class="card-body p-3 d-flex flex-column justify-content-between">
								<div class="d-flex align-items-center">
									<div class="icon icon-shape bg-white shadow text-center border-radius-lg me-3">
										<i class="fas fa-calendar-day fa-2x text-primary"></i>
									</div>
									<div>
										<h5 class="text-white font-weight-bolder mb-0"> {{ totalProducts  }} </h5>
										<span class="text-white text-sm"> Total Number of Products </span>
									</div>
								</div>
							</div>
						</div>
					</div>

					<!-- Carte 2 : Commandes non vérifiées -->
					<div class="col-lg-3 col-md-6 col-12 mb-4">
						<div class="card bg-gradient-danger shadow-lg border-0 h-100">
							<div class="card-body p-3 d-flex flex-column justify-content-between">
								<div class="d-flex align-items-center">
									<div class="icon icon-shape bg-white shadow text-center border-radius-lg me-3">
										<i class="fas fa-exclamation-circle fa-2x text-danger"></i>
									</div>
									<div>
										<h5 class="text-white font-weight-bolder mb-0"> {{ availableProducts }}  </h5>
										<span class="text-white text-sm"> Number of Available Products </span>
									</div>
								</div>
							</div>
						</div>
					</div>

					<!-- Carte 3 : Produit le plus vendu -->
					<div class="col-lg-3 col-md-6 col-12 mb-4">
						<div class="card bg-gradient-success shadow-lg border-0 h-100">
							<div class="card-body p-3 d-flex flex-column justify-content-between">
								<div class="d-flex align-items-center">
									<div class="icon icon-shape bg-white shadow text-center border-radius-lg me-3">
										<i class="fas fa-star fa-2x text-success"></i>
									</div>
									<div>
										<h5 class="text-white font-weight-bolder mb-0">{{ notAvailableProducts }} </h5>
										<span class="text-white text-sm"> Number of Unavailable Products </span>
									</div>
								</div>
							</div>
						</div>
					</div>

					<!-- Carte 4 : Produits vendus ce mois-ci -->
					<div class="col-lg-3 col-md-6 col-12 mb-4">
						<div class="card bg-gradient-info shadow-lg border-0 h-100">
							<div class="card-body p-3 d-flex flex-column justify-content-between">
								<div class="d-flex align-items-center">
									<div class="icon icon-shape bg-white shadow text-center border-radius-lg me-3">
										<i class="fas fa-shopping-bag fa-2x text-info"></i>
									</div>
									<div>
										<h5 class="text-white font-weight-bolder mb-0">  {{ productsAddedThisMonth  }} </h5>
										<span class="text-white text-sm"> Number of Products Added This Month </span>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>		

			<div class="card mb-4 mx-auto" style="max-width: 90%; margin-left: auto; margin-right: auto;">
			
				<div class="card-header pb-3">
					<h6>Products Table</h6>
				</div>
				<div class="container-fluid py-4">
					<!-- Options de recherche, de filtrage et de tri -->
					<div class="mb-3">
						<form method="get" action="{{ path('app_dashboard') }}" id="filter-form">
							<div class="row">
								<!-- Champ de recherche par nom ou ID -->
								<div class="col-md-3">
									<label for="search_query">Search by name or ID</label>
									<input type="text" name="search_query" id="search_query" class="form-control" placeholder="name or ID ..." value="{{ search_query }}">
								</div>

								<!-- Filtre par disponibilité -->
								<div class="col-md-3">
									<label for="filter_by_availability" class="form-label" >Filter by Availability</label>
									<select name="filter_by_availability" id="filter_by_availability" class="form-select" onchange="document.getElementById('filter-form').submit()">
										<option value=""  {{ filter_by_availability is null ? 'selected' : '' }}>All</option>
										<option value="1" {{ filter_by_availability == '1' ? 'selected' : '' }}>Available</option>
										<option value="0" {{ filter_by_availability == '0' ? 'selected' : '' }}>Not available</option>
									</select>
								</div>

								<!-- Tri par date d'ajout -->
								<div class="col-md-3">
									<label for="sort_by_date"> Sort by date</label>
									<select name="sort_by_date" id="sort_by_date" class="form-select" onchange="document.getElementById('filter-form').submit()">
										<option value="desc" {{ sort_by_date == 'desc' ? 'selected' : '' }}> Descending date</option>
										<option value="asc" {{ sort_by_date == 'asc' ? 'selected' : '' }}>Ascending date</option>
									</select>
								</div>

								<!-- Bouton de recherche -->
								<div class="col-md-3 align-self-end">
									<button type="submit" class="btn btn-primary w-100">Search</button>
								</div>
							</div>
						</form>
					</div>
					<div
						class="card-body pt-0 pb-3 px-4">
						<!-- Limiter le tableau à 5 lignes avec scroll -->
						<div class="table-responsive" style="max-height: calc(5 * 3.5rem); overflow-y: auto;">
							<table class="table align-items-center mb-0 table">
								<thead class="bg-light">
									<tr>
										<th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Id</th>
										<th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Name</th>
										<th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Color</th>
										<th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Size</th>
										<th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Type</th>
										<th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Price</th>
										<th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Availability</th>
										<th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Product Date</th>
										<th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Description</th>
										<th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Actions</th>
									</tr>
								</thead>
								<tbody>
									<style>
										.description {
											max-width: 200px;
											overflow: hidden;
											text-overflow: ellipsis;
											white-space: nowrap;
										}
									</style>
									{% for product in products %}
										<tr class="event-row">
											<td>{{ product.id }}</td>
											<td>{{ product.name }}</td>
											<td>{{ product.color }}</td>
											<td>{{ product.size }}</td>
											<td>{{ product.type }}</td>
											<td>{{ product.price }}</td>
											<td>
												{% if product.availability %}
													<span class="badge bg-success">Available</span>
												{% else %}
													<span class="badge bg-danger">Not Available</span>
												{% endif %}
											</td>
											<td>{{ product.productDate|date('Y-m-d H:i:s') }}</td>											
											<td class="description">{{ product.description }}</td>
											<td>
												<a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn bg-gradient-danger btn-sm">Show</a>
												<a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn bg-gradient-info btn-sm">Edit</a>
												<a href="{{ path('app_product_delete_simple', {'id': product.id}) }}" class="btn bg-gradient-warning btn-sm">Delete</a>

											</td>
										</tr>
									{% else %}
										<tr>
											<td colspan="9" class="text-center">No records found</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
						<div class="d-flex justify-content-end mt-3">
							<a href="{{ path('app_product_new') }}" class="btn bg-gradient-primary">Create New</a>
						</div>
					</div>
				{% endblock %}
			</div>


